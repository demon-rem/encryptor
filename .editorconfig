# Check http://editorconfig.org for more information
# This is the main config file for this project:
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space                # Tabs are bad
indent_size = 4                     # Still not used to tabs of 2 spaces :/
trim_trailing_whitespace = true     # Extra whitespaces are annoying

[*.{c, h, hpp, cpp}]
indent_style = space    # Using spaces for source files

[Makefile]
indent_style = tab

[CMakeLists.txt]

[*.md]
trim_trailing_whitespace = false

[*.{diff,patch}]
trim_trailing_whitespace = false
